<?xml version="1.0" encoding="ISO-8859-1" ?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <display-name>HelloWorld Application</display-name>
    <description>
        This is a simple web application with a source code organization
        based on the recommendations of the Application Developer's Guide.
    </description>

    <servlet>
        <servlet-name>TomcatHelloWorldExample</servlet-name>
        <servlet-class>chandler.HelloWorldExample</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TomcatHelloWorldExample</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChandlerSignup</servlet-name>
        <servlet-class>chandler.Signup</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChandlerSignup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
	
    <servlet>
        <servlet-name>ChandlerSignin</servlet-name>
        <servlet-class>chandler.Signin</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChandlerSignin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ChandlerRegisterEvent</servlet-name>
        <servlet-class>chandler.RegisterEvent</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChandlerRegisterEvent</servlet-name>
        <url-pattern>/event/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChandlerCreateEvent</servlet-name>
        <servlet-class>chandler.CreateEvent</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChandlerCreateEvent</servlet-name>
        <url-pattern>/createevent</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ChandlerGetEvent</servlet-name>
        <servlet-class>chandler.GetEvents</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChandlerGetEvent</servlet-name>
        <url-pattern>/getevent</url-pattern>
    </servlet-mapping>
</web-app>     

